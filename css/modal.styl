@import "shared";
@import "button";

.modal-bg {
    background #ccc
    background $transparentDarkBackground
    position absolute
    top 0px
    left 0px
    width 100%
    height 100%
    opacity 0
    text-align center
    z-index 999

    &::after {
        content ''
        display inline-block
        height 100%
        margin-right -0.25em
        vertical-align middle
    }
}

div.modal-display 
    opacity 1

.modal-window 
    background #fff
    box-shadow 0 0 10px #555
    margin 0 auto
    min-width 500px
    display inline-block
    vertical-align middle
    text-align left
    border-radius 2px
    position relative
    max-width 480px

.modal-header {
    padding 10px
    linearGradient(top, #494949, #242424)

    & > h1 {
        font-size 1.5em
        color #fff
        margin 0
    }
}

.modal-error {
    & .modal-header > h1 {
        color: #000;
        text-shadow: 1px 1px 0px #555;
    }
    & .modal-footer > input {
        color black
        linearGradient(top, #efefef, #ececec)
    }
}

.modal-message {
    & .modal-header {
        linearGradient(top, #59AD5C, #3E9141)

        & > h1 {
            color #0D5025
            text-shadow 1px 1px 0px #29C46D
        }

    }
}

.modal-body {
    padding 10px
    linearGradient(top, #efefef, #ececec)
    border-bottom 1px solid #ddd
    & > p {
        color black
        font-size 1em
        margin 1em 0
    }
}

.modal-footer {
    padding 10px
    background #d3d3d3
    min-height 45px
    text-align right

    & > input {
        float right
    }

}